<Window x:Class="StudentScheduleClient.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StudentScheduleClient"
        mc:Ignorable="d"
        Title="LoginWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="10*"/>
            <ColumnDefinition Width="20*"/>
            <ColumnDefinition Width="50*"/>
            <ColumnDefinition Width="30*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="10*"/>
            <RowDefinition Height="10*"/>
            <RowDefinition Height="10*"/>
            <RowDefinition Height="10*"/>
            <RowDefinition Height="10*"/>
            <RowDefinition Height="20*"/>
            <RowDefinition Height="10*"/>
            <RowDefinition Height="10*"/>
        </Grid.RowDefinitions>

        <TextBlock
            Grid.Column="2"
            Grid.Row="1"
            x:Name="ErrorMessage"
            Text=""
            TextAlignment="Left"
            Padding="10"
            />

        <Label
            Grid.Row="2"
            Grid.Column="1"
            Content="Login:"
            HorizontalContentAlignment="Center"
            />

        <Label
            Grid.Row="4"
            Grid.Column="1"
            Content="Password:"
            HorizontalContentAlignment="Center"
            />

        <TextBox
            x:Name="LoginBox"
            Text="marek.zielinski"
            Grid.Column="2"
            Grid.Row="2"
            />
        <TextBox
            x:Name="PasswordBox"
            Text="Haslo123!"
            Grid.Column="2"
            Grid.Row="4"
            />
        <Button
            x:Name="SubmitButton"
            Grid.Column="2"
            Grid.Row="6"
            Content="Login" Click="SubmitButton_Click"
            />

    </Grid>
</Window>
