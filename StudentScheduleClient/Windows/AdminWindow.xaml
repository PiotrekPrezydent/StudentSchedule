<Window x:Class="StudentScheduleClient.Windows.AdminWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StudentScheduleClient.Windows"
        mc:Ignorable="d"
        Title="AdminWindow" Height="450" Width="800">
    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="15*"/>
            <ColumnDefinition Width="85*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="4*"/>
            <RowDefinition Height="8*"/>
            <RowDefinition Height="4*"/>
            <RowDefinition Height="8*"/>
            <RowDefinition Height="4*"/>
            <RowDefinition Height="8*"/>
            <RowDefinition Height="4*"/>
            <RowDefinition Height="8*"/>
            <RowDefinition Height="4*"/>
            <RowDefinition Height="8*"/>
            <RowDefinition Height="4*"/>
            <RowDefinition Height="8*"/>
            <RowDefinition Height="4*"/>
            <RowDefinition Height="8*"/>
            <RowDefinition Height="4*"/>
            <RowDefinition Height="8*"/>
            <RowDefinition Height="4*"/>
        </Grid.RowDefinitions>

        <Button
            x:Name="StartBTN"
            Grid.Row="1"
            Content="Start" Click="StartBTN_Click"
            />
        <Button
            x:Name="AccountBTN"
            Grid.Row="3"
            Content="Konta" Click="AccountBTN_Click"
            />

        <Button
            x:Name="ClassBTN"
            Grid.Row="5"
            Content="Zajęcia" Click="ClassBTN_Click"
            />

        <Button
            x:Name="ClassroomBTN"
            Grid.Row="7"
            Content="Sale" Click="ClassroomBTN_Click"
            />

        <Button
            x:Name="ProgramBTN"
            Grid.Row="9"
            Content="Kierunki" Click="ProgramBTN_Click"
            />

        <Button
            x:Name="StudentBTN"
            Grid.Row="11"
            Content="Studenci" Click="StudentBTN_Click"
            />

        <Button
            x:Name="StudentProgramBTN"
            Grid.Row="13"
            Content="Student-Kierunki" Height="35" Grid.RowSpan="2" VerticalAlignment="Top" Click="StudentProgramBTN_Click"
            />

        <Button
            x:Name="SubjectBTN"
            Grid.Row="15"
            Content="Przedmioty" Click="SubjectBTN_Click"
            />

        <Frame 
            x:Name="MainFrame" 
            Grid.Column="1"
            Grid.Row="1"
            Grid.RowSpan="16"
            NavigationUIVisibility="Hidden" 
            HorizontalAlignment="Stretch" 
            VerticalAlignment="Stretch" 
            Margin="10"/>
    </Grid>
</Window>
