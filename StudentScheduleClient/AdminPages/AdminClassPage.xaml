<Page x:Class="StudentScheduleClient.AdminPages.AdminClassPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:StudentScheduleClient.AdminPages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AdminClassPage">

    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="65*"/>
            <RowDefinition Height="5*"/>
            <RowDefinition Height="10*"/>
            <RowDefinition Height="5*"/>
            <RowDefinition Height="10*"/>
            <RowDefinition Height="5*"/>
        </Grid.RowDefinitions>
        <ListView x:Name="Entities">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="ID" Width="40" DisplayMemberBinding="{Binding Id}" />
                    <GridViewColumn Header="ProgramId" Width="70" DisplayMemberBinding="{Binding ProgramId}" />
                    <GridViewColumn Header="SubjectId" Width="70" DisplayMemberBinding="{Binding SubjectId}" />
                    <GridViewColumn Header="ClassroomId" Width="80" DisplayMemberBinding="{Binding ClassroomId}" />
                    <GridViewColumn Header="Year" Width="70" DisplayMemberBinding="{Binding Year}" />
                    <GridViewColumn Header="Weekday" Width="100" DisplayMemberBinding="{Binding Weekday}" />
                    <GridViewColumn Header="StartTime" Width="100" DisplayMemberBinding="{Binding StartTime}" />
                    <GridViewColumn Header="EndTime" Width="100" DisplayMemberBinding="{Binding EndTime}" />
                    <GridViewColumn Header="">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                    <Button Content="Edit" Margin="2"
                                            Click="EditButton_Click"
                                            Tag="{Binding}"
                                            />
                                    <Button Content="Delete" Margin="2"
                                            Click="DeleteButton_Click"
                                            Tag="{Binding}"
                                            />
                                </StackPanel>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                </GridView>
            </ListView.View>
        </ListView>
        <Button
            Grid.Row="2"
            Content="SetFilters" Margin="2"
            Click="FilterButton_Click"
            Tag="{Binding}"
           />
        <Button
            Grid.Row="4"
            Content="Add" Margin="2"
            Click="AddButton_Click"
            Tag="{Binding}"
           />
    </Grid>
</Page>

